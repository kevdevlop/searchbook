<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kevdev.searchbook.PrincipalAdmin"
    tools:showIn="@layout/activity_principal_admin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="492dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bienvenido, "
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btn_toModifData"
            android:layout_alignStart="@+id/btn_toModifData" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtTV"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/btn_logout"
            android:layout_toEndOf="@+id/btn_logout"
            android:textColor="#0057a8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar Libro"
            android:id="@+id/btn_goTodelBook"
            android:layout_marginTop="78dp"
            android:onClick=" onDeleteBook"
            android:layout_below="@+id/txtTV"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:id="@+id/btn_logout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="LogOut" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar datos de usuario"
            android:id="@+id/btn_toModifData"
            android:onClick="onModifData"
            android:layout_marginBottom="24dp"
            android:layout_below="@+id/btn_goToAddLibro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar Usuario"
            android:id="@+id/btn_bajaUser"
            android:layout_below="@+id/btn_toModifData"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="50dp"
            android:onClick="onDeleteUser" />

    </RelativeLayout>

</LinearLayout>
